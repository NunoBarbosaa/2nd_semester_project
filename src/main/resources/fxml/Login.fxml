<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.ui.gui.LoginGUI">
    <top>
        <AnchorPane prefHeight="187.0" prefWidth="500.0" style="-fx-background-color: #3339FF;" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="169.0" layoutY="70.0" text="DGS/SNS" textAlignment="CENTER">
                    <font>
                        <Font name="Eras Bold ITC" size="36.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </top>
    <bottom>
        <AnchorPane prefHeight="200.0" prefWidth="500.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="email" layoutX="167.0" layoutY="39.0" promptText="Email" />
                <PasswordField fx:id="password" layoutX="167.0" layoutY="88.0" promptText="Password" />
                <Button fx:id="loginButton" layoutX="250.0" layoutY="150.0" mnemonicParsing="false" onAction="#loginButton" style="-fx-background-color: #3339FF;" text="LOGIN">
                    <font>
                        <Font name="Eras Bold ITC" size="15.0" />
                    </font>
                </Button>
                <Label fx:id="message" disable="true" layoutX="169.0" layoutY="122.0" prefHeight="18.0" prefWidth="148.0" />
                <Button fx:id="closeButton" layoutX="167.0" layoutY="150.0" mnemonicParsing="false" onAction="#closeButton" style="-fx-background-color: #3339FF;" text="CLOSE">
                    <font>
                        <Font name="Eras Bold ITC" size="15.0" />
                    </font>
                </Button>
            <Button fx:id="devTeambutton" alignment="TOP_CENTER" layoutX="158.0" layoutY="2.0" mnemonicParsing="false" onAction="#knowTeam" style="-fx-background-color: #3339FF;" text="Know the development team" underline="true" />
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
